<%- include('partials/header.ejs') %>

<div class="main-content">
  <section class="section">
    <div class="section-body">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div
              class="card-header"
              style="height: 70px; background-color: #6fd943"
            >
              <div class="col-12">
                <h4 class="float-left">Plan</h4>
                <div class="head-right-btn">
                  <button
                    class="btn btn-sm btn-secondary float-right card-text-btn"
                    type="submit"
                    data-bs-toggle="modal"
                    data-bs-target="#myModal"
                  >
                    <a
                      href="#"
                      data-ajax-popup="true"
                      data-size="md"
                      data-title="Invite New User"
                      data-toggle="tooltip"
                      title=""
                      data-bs-original-title="Add Plan"
                    >
                      Add
                    </a>
                  </button>
                </div>
              </div>
            </div>

            <div class="card-body">
              <div class="row">
                <div class="col-12">
                  <div class="table-responsive p-2">
                    <table class="table table-bordered table-md">
                      <thead>
                        <tr>
                          <th>S.No</th>
                          <th>Title</th>
                          <th>Actual Price</th>
                          <th>Offer Price</th>
                          <th>Duration</th>
                          <th>Action</th>
                        </tr>
                      </thead>

                      <tbody>
                        <% if(!plan[0]){ %>
                        <tr>
                          <td colspan="100%">No Data</td>
                        </tr>
                        <% } else {%><% plan.forEach(function(plan,index){ %>
                        <tr>
                          <td><%= index+1 %></td>
                          <td><%= plan.title %></td>
                          <td><%= plan.actual_price %></td>
                          <td><%= plan.offer_price %></td>
                          <td><%= plan.duration %></td>
                          <td style="width: 12px">
                            <i
                              class="btn btn-danger btn-lg fas fa-trash-alt"
                              onclick="deleteplan('<%= plan.id %>');"
                            ></i>
                          </td>
                        </tr>
                        <% }) } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <div class="modal" id="myModal">
    <!-- modal  -->
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Add Plan</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="body">
          <div class="modal-body">
            <form id="addform" class="mx-5 form-group font-weight-bold showcursor: true">
              <input
                type="hidden"
                name="package_id"
                id="package_id"
                value="<%= package_id %>"
              />
              <div class="mb-3">
                <label>Title: </label>
                <input
                  type="text"
                  class="form-control"
                  id="title"
                  name="title"
                  placeholder="Title"
                />
              </div>
              <div class="mb-3">
                <label>Actual Price: </label>
                <input
                  type="text"
                  class="form-control"
                  id="actual_price"
                  name="actual_price"
                  placeholder="Actual Price"
                />
              </div>
              <div class="mb-3">
                <label>Offer Price: </label>
                <input
                  type="text"
                  class="form-control"
                  id="offer_price"
                  name="offer_price"
                  placeholder="Offer Price"
                />
              </div>

              <div class="mb-3">
                <label>duration: </label>
                <input
                  type="text"
                  class="form-control"
                  id="duration"
                  name="duration"
                  placeholder="Duration"
                />
              </div>
              <button
                type="submit"
                class="btn mt-3 pull-right"
                style="background-color: #6fd943; color: #fff"
              >
                Add
              </button>
            </form>
          </div>
          <div class="col-md-12 modal-footer"></div>
        </div>
      </div>
    </div>
    <!-- modal  -->
  </div>
</div>

<%- include ('partials/footer.ejs') %>

<script>
  var addform = $("#addform");
  addform.on("submit", addsubmitHandler);

  function addsubmitHandler(e) {
    e.preventDefault();

    // PREPARE FORM DATA
    var formData = getFormData($(addform));
    console.log(formData);

    // // DO POST
    $.ajax({
      type: "POST",
      contentType: "application/json",
      url: "/admin/plan/add",
      data: JSON.stringify(formData),
    })
      .done((res) => {
        if (res.error == true) {
          renderToast({ message: res.message, icon: "error" });
        } else {
          renderToast({ message: res.message, icon: "success" });
          setTimeout(() => {
            window.location.reload();
          }, 2000);
        }
      })
      .fail(function (xhr, status, error) {
        console.log(xhr.responseText);
      });
  }
</script>

<script>
  function deleteplan(id) {
    if (confirm("Do you really want to delete this record")) {
      // DO POST
      $.ajax({
        type: "POST",
        contentType: "application/json",
        url: "/admin/plan/delete",
        data: JSON.stringify({
          id: id,
        }),
      })
        .done((res) => {
          if (res.error == true) {
            renderToast({ message: res.message, icon: "error" });
          } else {
            renderToast({ message: res.message, icon: "success" });
            setTimeout(() => {
              window.location.reload();
            }, 2000);
          }
        })
        .fail(function (xhr, status, error) {
          console.log(xhr.responseText);
        });
    }
  }
</script>
