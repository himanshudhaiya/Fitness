<%- include('partials/header.ejs') %>

<!-- content start -->
<div class="main-content">
  <section class="section">
    <div class="section-body">
      <!--  Start-->
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div
              class="card-header"
              style="height: 70px; background-color: #6fd943"
            >
              <div class="col-12">
                <h4 class="float-left">Post Comments</h4>
              </div>
            </div>

            <div class="card-body">
              <div class="row">
                <div class="col-12">
                  <div class="table-responsive p-2">
                    <table class="table table-bordered table-md">
                      <thead class="t-head">
                        <tr>
                          <th>S.No</th>
                          <th>User</th>
                          <th>Post</th>
                          <th>Comment</th>
                        </tr>
                      </thead>

                      <tbody>
                        <% if(!post_comments[0]){%>
                        <tr>
                            <td colspan="4">No shortvideo comments Found</td>
                        </tr>
                        <% } else { post_comments.forEach(function(post_comments,test){ %>
                        <tr>
                            <td><%= test+1%> </td>
                            <td><%= post_comments.user_id ? post_comments.user_id.name : " " %> </td>
                            <td><%= post_comments.post_id.text %> </td>
                            <td><%= post_comments.comment %> </td>
                        </tr>
    
                        <% }); } %>
                    </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Ends -->
    </div>
  </section>
</div>
<!-- Main Content -->

<%- include ('partials/footer.ejs') %>
