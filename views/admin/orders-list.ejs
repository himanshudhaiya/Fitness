<%- include('partials/header.ejs') %>

<!-- content start -->
<div class="main-content">
  <section class="section">
    <div class="section-body">
      <!--  Orders Start-->
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div
              class="card-header"
              style="height: 70px; background-color: #6fd943"
            >
              <div class="col-12">
                <h4 class="float-left">Orders</h4>
              </div>
            </div>

            <div class="card-body">
              <div class="row">
                <div class="col-12">
                  <div class="table-responsive p-2">
                    <table class="table table-bordered table-md">
                      <thead class="t-head">
                        <tr>
                            <th>S.No</th>
                            <th>User Id</th>
                            <th>Mobile Number</th>
                            <th>Package</th>
                            <th>Plan</th>
                            <th>Amount</th>
                            <th>Order Id</th>
                            <th>Receipt Id</th>
                            <th>Date</th>
                        </tr>
                      </thead>

                      <tbody>
                        <% if(!paymentData[0]) { %>
                        <tr>
                          <td colspan="100%">No Data</td>
                        </tr>
                        <% } else {%> <% paymentData.forEach(function(paymentData,index){ %>
                        <tr>
                            <td><%= index+1 %></td>
                            <td><%= paymentData.user_id ? paymentData.user_id.name : " " %></td>
                            <td><%= paymentData.user_id ? paymentData.user_id.mobile_number : " " %></td>
                            <td><%= paymentData.package_id ? paymentData.package_id.title : " " %></td>
                            <td><%= paymentData.plan_id ? paymentData.plan_id.title : " " %></td>
                            <td><%= paymentData.amount %></td>
                            <td><%= paymentData.order_id %></td>
                            <td><%= paymentData.receipt_id %></td>
                          <td>
                            <%= convertTimeStampToDate(paymentData.created_at) %>
                          </td>
                        </tr>
                        <% }); %> <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Orders Ends -->
    </div>
  </section>
</div>
<!-- Main Content -->
<%
function convertTimeStampToDate(date){
   date = Number(date)
      var d = new Date(date),
         month = '' + (d.getMonth() + 1),
         day = '' + d.getDate(),
         year = d.getFullYear();

   if (month.length < 2)
   month = '0' + month;
   if (day.length < 2)
   day = '0' + day;
   var date = new Date();
   date.toLocaleDateString();

   return [day, month, year].join('-');
}
%>
